{
  "name": "@giffin/server",
  "version": "0.1.0",
  "author": "OllysCoding",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "nodemon -e .ts --exec \"pnpm run build && pnpm run start\"",
    "build": "rimraf ./dist && swc ./src/ -d ./dist --config-file .swcrc",
    "start": "node ./dist/src/index.js | pino-pretty",
    "lint": "eslint --max-warnings 0",
    "check-types": "tsc --noEmit"
  },
  "dependencies": {
    "@fastify/static": "^9.0.0",
    "dotenv": "^17.2.3",
    "fastify": "^5.6.2",
    "fastify-plugin": "^5.1.0",
    "next": "16.1.0",
    "pino": "^10.1.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "reflect-metadata": "^0.2.2",
    "rimraf": "^6.1.2",
    "typedi": "^0.10.0"
  },
  "devDependencies": {
    "@giffin/eslint-config": "workspace:*",
    "@giffin/typescript-config": "workspace:*",
    "@swc/cli": "^0.7.9",
    "@swc/core": "^1.15.7",
    "@types/node": "^22.15.3",
    "@types/react": "19.2.2",
    "@types/react-dom": "19.2.2",
    "eslint": "^9.39.1",
    "nodemon": "^3.1.11",
    "pino-pretty": "^13.1.3",
    "typescript": "5.9.2"
  }
}
